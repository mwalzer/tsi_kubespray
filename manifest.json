{
    "applicationName": "Kubernetes Kargo Cluster + Shared FS",
        "contactEmail": "pmoreno@ebi.ac.uk",
        "about": "A Kubernetes cluster deployment plus shared file system using Kargo",
        "version": "0.1",
        "cloudProviders": [
            { "cloudProvider":"OSTACK","path":"ostack",
		     "inputs": [ "cluster_name", 
		                 "number_of_k8s_masters", 
				 "number_of_k8s_masters_no_floating_ip", 
				 "number_of_k8s_nodes_no_floating_ip", 
				 "number_of_k8s_nodes", 
				 "public_key_path", 
				 "image", 
				 "ssh_user", 
				 "flavor_k8s_node", 
				 "flavor_k8s_master", 
				 "network_name", 
				 "floatingip_pool", 
				 "flavor_gfs_node", 
				 "image_gfs", 
				 "number_of_gfs_nodes_no_floating_ip", 
				 "gfs_volume_size_in_gb", 
				 "ssh_user_gfs" ]
            }
        ],
        "deploymentParameters": ["keypair", 
		                 "cloud_provider", 
				 "bootstrap_os", 
				 "kube_api_pwd", 
				 "galaxy_admin_password",
	                         "galaxy_admin_email"],
        "outputs": []
}

